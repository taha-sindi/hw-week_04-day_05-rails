<h1> My Articles </h1> <table> <tr>
<th> Title </th> <th> Text </th>
<th colspan='2'> </th> </tr>
<%= link_to "Create article", new_article_path %>
<% @article.each do |article|%> <tr>
<td> <%= article.text%> </td>
<td> <%= link_to 'Show', article_path(article) %></td>
<td> <%= link_to 'Edit', edit_article_path(article) %></td>
<td> <%= link_to 'Destroy', article_path(article), method: :delete, data: {confirm: 'Are you sure?'} %>
</td> </tr> <% end %> </table>